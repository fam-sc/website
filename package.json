{
  "name": "sc-fam",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "scripts": {
    "dev": "yarn workspace @sc-fam/website dev",
    "build": "yarn workspace @sc-fam/website build",
    "start": "yarn workspace @sc-fam/website start",
    "lint": "tsx ./scripts/lint.ts",
    "lint:fix": "yarn lint --fix",
    "typegen": "yarn workspaces foreach --all -p run typegen",
    "prebuild": "yarn workspace @sc-fam/shared-ui postbuild && yarn tsc --build tsconfig.packages.json --declaration",
    "prebuild:watch": "yarn prebuild --watch",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.9.0",
    "@eslint/js": "9.35.0",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unicorn": "60.0.0",
    "jiti": "2.4.2",
    "playwright": "1.55.0",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "stylelint": "16.24.0",
    "stylelint-config-standard-scss": "16.0.0",
    "stylelint-scss": "6.12.1",
    "tsx": "4.20.5",
    "typescript": "5.8.3",
    "typescript-eslint": "8.43.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "vitest-browser-react": "1.0.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
