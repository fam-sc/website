{
  "name": "sc-fam",
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "dev": "yarn workspace @sc-fam/website dev",
    "build": "yarn workspace @sc-fam/website build",
    "start": "yarn workspace @sc-fam/website start",
    "lint": "eslint --cache --cache-location .eslintcache && yarn workspaces foreach --all -p run build:no-emit",
    "lint:fix": "eslint --fix . && prettier --write \"**/*.{js,mjs,jsx,ts,mts,tsx,json,css,scss,md}\"",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@testing-library/react": "16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "4.5.1",
    "@vitest/browser": "3.2.2",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unicorn": "58.0.0",
    "jiti": "2.4.2",
    "jsdom": "26.0.0",
    "playwright": "1.52.0",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "7.0.0-beta.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.2",
    "vitest-browser-react": "0.2.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
