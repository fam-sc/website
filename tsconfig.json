{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "./eslint.config.mts",
    "stylelint.config.js",
    "prettier.config.mjs",
    "./scripts"
  ],
  "exclude": ["./node_modules"]
}
