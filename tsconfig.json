{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "src",
    "eslint.config.mts",
    "prettier.config.mjs",
    "webpack.config.ts",
    "vitest.config.ts",
  ]
}
