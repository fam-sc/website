{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "preserve",
    "moduleResolution": "bundler"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
