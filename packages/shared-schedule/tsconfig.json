{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@data/*": ["../data/src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
