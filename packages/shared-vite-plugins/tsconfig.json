{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "rootDir": "./src"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "references": [{ "path": "../shared" }]
}
