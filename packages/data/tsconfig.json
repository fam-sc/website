{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "rootDir": "./src"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "references": [{ "path": "../shared" }, { "path": "../shared-sql" }]
}
