{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "composite": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
