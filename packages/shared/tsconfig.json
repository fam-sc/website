{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vite/client"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
