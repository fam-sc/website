{
  "name": "@sc-fam/schedule-bot",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "scripts": {
    "build:no-emit": "tsc --noEmit",
    "deploy": "wrangler deploy --define \"DEV: false\"",
    "dev": "wrangler dev --define \"DEV: true\"",
    "typegen": "wrangler types",
    "webhook:set": "tsx ./src/scripts/setWebhook.ts",
    "webhook:delete": "tsx ./src/scripts/deleteWebhook.ts",
    "set-commands": "tsx ./src/scripts/setCommands.ts"
  },
  "dependencies": {
    "@sc-fam/data": "workspace:*",
    "@sc-fam/shared": "workspace:*",
    "@sc-fam/shared-schedule": "workspace:*",
    "telegram-standard-bot-api": "1.0.8",
    "wrangler": "4.33.1"
  },
  "devDependencies": {
    "@types/node": "24.2.0",
    "dotenv": "17.2.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}
