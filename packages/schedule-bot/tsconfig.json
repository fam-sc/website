{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "./worker-configuration.d.ts",
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@data/*": ["../data/src/*"]
    }
  },
  "include": ["./src", "./worker-configuration.d.ts"],
  "exclude": ["./node_modules"]
}
