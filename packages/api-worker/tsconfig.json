{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["./worker-configuration.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@data/*": ["../data/src/*"]
    }
  },
  "include": ["./src/**/*.ts", "../shared/src/types/*.ts"],
  "exclude": ["./node_modules"]
}
