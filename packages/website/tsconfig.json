{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@data/*": ["../data/src/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "types": ["./cloudflare-env.d.ts"],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "./cloudflare-env.d.ts",
    "./src/**/*",
    "./.storybook/**/*",
    ".next/types/**/*.ts"
  ]
}
